#!/bin/bash

# ============================================================================
# CleanMac Pro Enterprise - Main CLI
# ============================================================================

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

PROJECT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

print_header() {
    echo -e "${CYAN}"
    echo "ðŸ§¹ CleanMac Pro Enterprise"
    echo "========================="
    echo -e "${NC}"
}

print_usage() {
    echo "Usage: cleanmac <command> [options]"
    echo ""
    echo "Available commands:"
    echo "  cache        Clean system caches (smart, safe cleaning)"
    echo "  analyze      Analyze disk usage with visual explorer"
    echo "  large-files  Find and manage large space-consuming files"
    echo "  docker       Clean Docker containers and images"
    echo "  security     Run security scan and health check"
    echo "  dashboard    Launch system overview dashboard"
    echo ""
    echo "Global options:"
    echo "  -h, --help     Show this help message"
    echo "  -v, --version  Show version information"
    echo ""
    echo "Run 'cleanmac <command> --help' for command-specific help."
}

print_version() {
    echo "CleanMac Pro CLI v1.0.0"
}

# Check if script exists and is executable
check_script() {
    local script_name="$1"
    if [ ! -f "$PROJECT_DIR/$script_name" ]; then
        echo -e "${RED}Error: $script_name not found${NC}"
        exit 1
    fi
    if [ ! -x "$PROJECT_DIR/$script_name" ]; then
        chmod +x "$PROJECT_DIR/$script_name"
    fi
}

# Main command dispatcher
case "$1" in
    cache)
        check_script "cleanmac-smart-cache"
        shift
        "$PROJECT_DIR/cleanmac-smart-cache" "$@"
        ;;
    
    analyze)
        check_script "cleanmac-analyze"
        shift
        "$PROJECT_DIR/cleanmac-analyze" "$@"
        ;;
    
    large-files)
        check_script "cleanmac-large-files"
        shift
        "$PROJECT_DIR/cleanmac-large-files" "$@"
        ;;
    
    docker)
        check_script "cleanmac-docker-clean"
        shift
        "$PROJECT_DIR/cleanmac-docker-clean" "$@"
        ;;
    
    security)
        check_script "cleanmac-security-scan"
        shift
        "$PROJECT_DIR/cleanmac-security-scan" "$@"
        ;;
    
    dashboard)
        check_script "cleanmac-dashboard"
        shift
        "$PROJECT_DIR/cleanmac-dashboard" "$@"
        ;;
    
    -h|--help)
        print_header
        print_usage
        exit 0
        ;;
    
    -v|--version)
        print_version
        exit 0
        ;;
    
    "")
        print_header
        print_usage
        exit 0
        ;;
    
    *)
        echo -e "${RED}Error: Unknown command '$1'${NC}"
        echo ""
        print_usage
        exit 1
        ;;
esac
