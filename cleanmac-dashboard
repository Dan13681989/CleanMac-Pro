#!/bin/bash
# ... existing dashboard code ...

echo ""
echo "ğŸ” ENHANCED DISK ANALYSIS"
echo "========================"

# Quick space overview
HOME_USAGE=$(du -sh ~ | cut -f1)
LARGE_FILES_COUNT=$(find ~ -type f -size +100M 2>/dev/null | wc -l | tr -d 
' ')

echo "ğŸ’¾ Home directory usage: $HOME_USAGE"
echo "ğŸ“ Large files (>100MB): $LARGE_FILES_COUNT"

# Docker status
if command -v docker &> /dev/null; then
    DOCKER_IMAGES=$(docker images -q | wc -l | tr -d ' ')
    echo "ğŸ³ Docker images: $DOCKER_IMAGES"
else
    echo "ğŸ³ Docker: Not installed"
fi

echo ""
echo "ğŸš€ QUICK ACTIONS:"
echo "   cleanmac-analyze       - Explore disk usage interactively"
echo "   cleanmac-large-files   - Show largest files"
echo "   cleanmac-docker-clean  - Clean Docker space"
echo "   cleanmac-smart-cache   - Smart cache cleaning"
