#!/bin/bash
# cleanmac-interactive - Interactive Dashboard for CleanMac Pro
# Part of CleanMac-Pro by Dan13681989

# Handle command-line arguments
if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    echo "CleanMac Pro v3.0.0"
    echo "Usage: cleanmac [OPTION]"
    echo "Options:"
    echo "  --help, -h     Show this help"
    echo "  --version, -v  Show version"
    echo "  (no args)      Launch interactive dashboard"
    exit 0
fi

if [ "$1" = "--version" ] || [ "$1" = "-v" ]; then
    echo "CleanMac Pro v3.0.0"
    exit 0
fi

if [ $# -gt 0 ]; then
    echo "Error: Unknown option '$1'"
    echo "Try: cleanmac --help"
    exit 1
fi

# Colors for UI
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color
BOLD='\033[1m'
DIM='\033[2m'

# Configuration
CONFIG_FILE="$HOME/.cleanmacrc"
BACKUP_DIR="$HOME/Documents/CleanMac_Backups"
VERSION="3.0.0"
LAST_RUN_FILE="$HOME/.cleanmac_last_run"

# ASCII Art Header
show_header() {
    clear
    echo -e "${CYAN}${BOLD}"
    echo "   ____ _                 __  __      ____                  "
    echo "  / ___| | ___  _ __ __ _|  \/  |_ __|  _ \ _ __ ___ _ __  "
    echo " | |   | |/ _ \| '__/ _\` | |\/| | '__| |_) | '__/ _ \ '_ \ "
    echo " | |___| | (_) | | | (_| | |  | | |  |  __/| | |  __/ |_) |"
    echo "  \____|_|\___/|_|  \__,_|_|  |_|_|  |_|   |_|  \___| .__/ "
    echo "                                                    |_|    "
    echo -e "${NC}${DIM}            Professional macOS Optimization Tool v${VERSION}${NC}"
    echo "================================================================"
}

# System Information Dashboard
system_dashboard() {
    echo -e "\n${BLUE}${BOLD}ğŸ“Š SYSTEM DASHBOARD${NC}"
    echo "------------------------------------------"
    
    # Disk space
    disk_info=$(df -h / | tail -1)
    echo -e "ğŸ’¾ Disk: $(echo $disk_info | awk '{print $3 " / " $2 " used (" $5 ")"}')"
    
    # Memory
    memory=$(vm_stat | grep "Pages free" | awk '{printf "%.1f", $3*4096/1073741824}')
    echo -e "ğŸ§  Memory: ${GREEN}${memory}GB${NC} free"
    
    # CPU
    cpu_usage=$(top -l 1 -s 0 | grep "CPU usage" | awk '{print $3}' | tr -d '%')
    echo -e "âš¡ CPU: ${YELLOW}${cpu_usage}%${NC} user"
    
    # Network
    if ping -c 1 -t 2 8.8.8.8 &>/dev/null; then
        echo -e "ğŸŒ Network: ${GREEN}Connected${NC}"
    else
        echo -e "ğŸŒ Network: ${RED}Offline${NC}"
    fi
    
    # Last cleanup
    if [[ -f "$LAST_RUN_FILE" ]]; then
        last_run=$(date -r "$LAST_RUN_FILE" "+%Y-%m-%d %H:%M")
        echo -e "ğŸ§¹ Last Clean: ${GREEN}${last_run}${NC}"
    else
        echo -e "ğŸ§¹ Last Clean: ${RED}Never${NC}"
    fi
}

# Rest of your existing functions...
# (Copy from your original cleanmac-interactive starting from line 40)
    
    # Disk space
    disk_info=$(df -h / | tail -1)
    echo -e "ğŸ’¾ Disk: $(echo $disk_info | awk '{print $3 " / " $2 " used (" $5 ")"}')"
    
    # Memory
    memory=$(vm_stat | grep "Pages free" | awk '{printf "%.1f", $3*4096/1073741824}')
    echo -e "ğŸ§  Memory: ${GREEN}${memory}GB${NC} free"
    
    # CPU
    cpu_usage=$(top -l 1 -s 0 | grep "CPU usage" | awk '{print $3}' | tr -d '%')
    echo -e "âš¡ CPU: ${YELLOW}${cpu_usage}%${NC} user"
    
    # Network
    if ping -c 1 -t 2 8.8.8.8 &>/dev/null; then
        echo -e "ğŸŒ Network: ${GREEN}Connected${NC}"
    else
        echo -e "ğŸŒ Network: ${RED}Offline${NC}"
    fi
    
    # Last cleanup
    if [[ -f "$LAST_RUN_FILE" ]]; then
        last_run=$(date -r "$LAST_RUN_FILE" "+%Y-%m-%d %H:%M")
        echo -e "ğŸ§¹ Last Clean: ${GREEN}${last_run}${NC}"
    else
        echo -e "ğŸ§¹ Last Clean: ${RED}Never${NC}"
    fi
}

# Progress bar
progress_bar() {
    local duration=$1
    local width=40
    local increment=0.1
    local steps=$(echo "$duration / $increment" | bc)
    
    echo -ne "["
    for ((i=0; i<width; i++)); do
        echo -ne "â–“"
        sleep $increment
    done
    echo -e "] Done!"
}

# Main Menu
main_menu() {
    while true; do
        show_header
        system_dashboard
        
        echo -e "\n${GREEN}${BOLD}ğŸš€ MAIN MENU${NC}"
        echo "------------------------------------------"
        echo "1) Quick Clean (Safe cache cleaning)"
        echo "2) Analyze Disk Usage"
        echo "3) Find Large Files"
        echo "4) Docker Cleanup"
        echo "5) Security Scan"
        echo "6) Network Optimization"
        echo "7) Advanced Tools"
        echo "8) System Monitor"
        echo "9) Settings"
        echo "0) Exit"
        
        echo -ne "\n${BOLD}Select option [0-9]: ${NC}"
        read -n 1 -r choice
        echo
        
        case $choice in
            1) quick_clean_menu ;;
            2) analyze_disk_menu ;;
            3) large_files_menu ;;
            4) docker_cleanup_menu ;;
            5) security_scan_menu ;;
            6) network_optimize_menu ;;
            7) advanced_tools_menu ;;
            8) system_monitor ;;
            9) settings_menu ;;
            0) echo -e "\n${GREEN}ğŸ‘‹ Thank you for using CleanMac Pro!${NC}"; exit 0 ;;
            *) echo -e "${RED}Invalid selection!${NC}"; sleep 1 ;;
        esac
    done
}

# Quick Clean Menu
quick_clean_menu() {
    echo -e "\n${GREEN}${BOLD}ğŸš€ QUICK CLEAN${NC}"
    echo "------------------------------------------"
    
    if [[ -f "./cleanmac-smart-cache" ]]; then
        echo -e "${YELLOW}Running smart cache cleanup...${NC}"
        ./cleanmac-smart-cache
        date > "$LAST_RUN_FILE"
    elif [[ -f "./scripts/system_cleanup.sh" ]]; then
        echo -e "${YELLOW}Running system cleanup...${NC}"
        ./scripts/system_cleanup.sh
        date > "$LAST_RUN_FILE"
    else
        echo -e "${RED}Cleanup scripts not found!${NC}"
    fi
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Analyze Disk Menu
analyze_disk_menu() {
    echo -e "\n${YELLOW}${BOLD}ğŸ” DISK ANALYSIS${NC}"
    echo "------------------------------------------"
    
    if [[ -f "./cleanmac-analyze" ]]; then
        ./cleanmac-analyze
    else
        echo "Disk usage by directory:"
        echo "-----------------------"
        du -sh ~/Documents ~/Downloads ~/Library/Caches ~/.docker 2>/dev/null
    fi
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Large Files Menu
large_files_menu() {
    echo -e "\n${RED}${BOLD}ğŸ—‘ï¸  LARGE FILES${NC}"
    echo "------------------------------------------"
    
    if [[ -f "./cleanmac-large-files" ]]; then
        ./cleanmac-large-files
    else
        echo "Finding files larger than 100MB..."
        echo "---------------------------------"
        find ~ -type f -size +100M -exec ls -lh {} \; 2>/dev/null | head -10
    fi
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Docker Cleanup Menu
docker_cleanup_menu() {
    echo -e "\n${BLUE}${BOLD}ğŸ³ DOCKER CLEANUP${NC}"
    echo "------------------------------------------"
    
    if ! command -v docker &>/dev/null; then
        echo -e "${RED}Docker not found.${NC}"
    elif [[ -f "./cleanmac-docker-clean" ]]; then
        ./cleanmac-docker-clean
    else
        echo "Docker disk usage:"
        docker system df 2>/dev/null || echo "Docker not running"
    fi
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Security Scan Menu
security_scan_menu() {
    echo -e "\n${MAGENTA}${BOLD}ğŸ›¡ï¸  SECURITY SCAN${NC}"
    echo "------------------------------------------"
    
    if [[ -f "./cleanmac-security-scan" ]]; then
        ./cleanmac-security-scan
    else
        echo "Basic security check:"
        echo "-------------------"
        # Check firewall
        firewall_status=$(/usr/libexec/ApplicationFirewall/socketfilterfw --getglobalstate 2>/dev/null | grep -i enabled)
        [[ -n "$firewall_status" ]] && echo "âœ“ Firewall: Enabled" || echo "âœ— Firewall: Disabled"
        
        # Check gatekeeper
        spctl --status 2>/dev/null && echo "âœ“ Gatekeeper: Enabled"
    fi
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Network Optimize Menu
network_optimize_menu() {
    echo -e "\n${GREEN}${BOLD}ğŸŒ NETWORK OPTIMIZATION${NC}"
    echo "------------------------------------------"
    
    if [[ -f "./scripts/network_optimizer.sh" ]]; then
        echo "1) Run Network Optimizer"
        echo "2) Test Network Speed"
        echo "3) Flush DNS Cache"
        echo "0) Back"
        
        echo -ne "\nSelect: "
        read -n 1 -r option
        echo
        
        case $option in
            1) sudo ./scripts/network_optimizer.sh ;;
            2) 
                if [[ -f "./scripts/network_monitor.sh" ]]; then
                    ./scripts/network_monitor.sh
                else
                    echo "Running speed test..."
                    curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python3 -
                fi
                ;;
            3) 
                sudo dscacheutil -flushcache
                sudo killall -HUP mDNSResponder
                echo -e "${GREEN}âœ“ DNS cache flushed${NC}"
                ;;
            0) return ;;
        esac
    else
        echo -e "${RED}Network optimizer script not found!${NC}"
    fi
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Advanced Tools Menu
advanced_tools_menu() {
    echo -e "\n${CYAN}${BOLD}ğŸ”§ ADVANCED TOOLS${NC}"
    echo "------------------------------------------"
    echo "1) Empty Trash"
    echo "2) Clear DNS Cache"
    echo "3) Reset Launchpad"
    echo "4) Clean Xcode Cache"
    echo "5) Clean npm Cache"
    echo "0) Back"
    
    echo -ne "\nSelect: "
    read -n 1 -r option
    echo
    
    case $option in
        1) 
            rm -rf ~/.Trash/* 2>/dev/null
            echo -e "${GREEN}âœ“ Trash emptied${NC}"
            ;;
        2)
            sudo dscacheutil -flushcache
            sudo killall -HUP mDNSResponder
            echo -e "${GREEN}âœ“ DNS cache cleared${NC}"
            ;;
        3)
            defaults write com.apple.dock ResetLaunchPad -bool true
            killall Dock
            echo -e "${GREEN}âœ“ Launchpad reset${NC}"
            ;;
        4)
            rm -rf ~/Library/Developer/Xcode/DerivedData
            echo -e "${GREEN}âœ“ Xcode cache cleaned${NC}"
            ;;
        5)
            npm cache clean --force 2>/dev/null && echo -e "${GREEN}âœ“ npm cache cleaned${NC}" || echo -e "${RED}âœ— npm not found${NC}"
            ;;
        0) return ;;
    esac
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# System Monitor
system_monitor() {
    echo -e "\n${YELLOW}${BOLD}ğŸ“Š REAL-TIME MONITOR${NC}"
    echo "------------------------------------------"
    echo "Press 'q' to quit"
    echo
    
    while true; do
        clear
        show_header
        
        # CPU
        echo -e "${CYAN}âš¡ CPU USAGE${NC}"
        top -l 1 -s 0 | grep "CPU usage" | awk '{print "User: "$3" | System: "$5" | Idle: "$7}'
        
        # Memory
        echo -e "\n${MAGENTA}ğŸ§  MEMORY${NC}"
        vm_stat | grep "Pages free" | awk '{printf "Free: %.1f GB\n", $3*4096/1073741824}'
        
        # Disk
        echo -e "\n${GREEN}ğŸ’¾ DISK${NC}"
        df -h / | tail -1 | awk '{print "Used: "$3" / "$2" ("$5")"}'
        
        echo -e "\n${DIM}Updated: $(date '+%H:%M:%S') - Press 'q' to exit${NC}"
        
        # Check for quit key
        read -t 2 -n 1 -r key
        [[ "$key" == "q" ]] && break
    done
}

# Settings Menu
settings_menu() {
    echo -e "\n${BLUE}${BOLD}âš™ï¸  SETTINGS${NC}"
    echo "------------------------------------------"
    echo "1) View Current Config"
    echo "2) Change Backup Directory"
    echo "3) Reset Configuration"
    echo "0) Back"
    
    echo -ne "\nSelect: "
    read -n 1 -r option
    echo
    
    case $option in
        1)
            echo -e "\n${CYAN}Current Configuration:${NC}"
            if [[ -f "$CONFIG_FILE" ]]; then
                cat "$CONFIG_FILE"
            else
                echo "Using default settings"
                echo "BACKUP_DIR: $BACKUP_DIR"
            fi
            ;;
        2)
            echo -ne "New backup directory: "
            read -r new_dir
            if [[ -n "$new_dir" ]]; then
                echo "BACKUP_DIR=\"$new_dir\"" > "$CONFIG_FILE"
                echo -e "${GREEN}âœ“ Backup directory updated${NC}"
            fi
            ;;
        3)
            echo -e "${RED}Reset configuration? [y/N]: ${NC}"
            read -n 1 -r confirm
            echo
            [[ "$confirm" =~ ^[Yy]$ ]] && rm -f "$CONFIG_FILE" && echo -e "${GREEN}âœ“ Configuration reset${NC}"
            ;;
        0) return ;;
    esac
    
    echo -e "\n${DIM}Press Enter to continue...${NC}"
    read -r
}

# Main function
main() {
    # Check if we're in CleanMac-Pro directory
    if [[ ! -f "./cleanmac-smart-cache" ]] && [[ ! -f "./scripts/system_cleanup.sh" ]]; then
        echo -e "${RED}Error: Please run from CleanMac-Pro directory${NC}"
        echo "Current directory: $(pwd)"
        exit 1
    fi
    
    # Make sure scripts are executable
    chmod +x ./cleanmac-* ./scripts/*.sh 2>/dev/null
    
    # Start the interactive menu
    main_menu
}

# Run main function
main
