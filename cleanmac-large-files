#!/bin/bash
# CleanMac Pro - Large File Detection
# Finds and reports large files consuming disk space

set -e

echo "ðŸ“ CleanMac Pro - Large File Detection"
echo "======================================"

echo "ðŸ” Scanning for large files (>100MB)..."
echo ""

# Find and display large files sorted by size
find ~ -type f -size +100M -exec ls -lh {} \; 2>/dev/null | sort -k5 -hr | 
head -30

echo ""
echo "ðŸ’¡ Tip: Use 'cleanmac-analyze' for interactive exploration"
echo "ðŸ’¡ Tip: Use 'cleanmac-docker-clean' to optimize Docker space"
